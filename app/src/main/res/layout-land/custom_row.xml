<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24sp"
    android:id="@+id/rowLayout">

    <LinearLayout
        android:id="@+id/fotografiaList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:padding="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lst_fotografiatId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="@string/photo_id"/>

        <TextView
            android:id="@+id/lst_fotografiaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="5dp"
            android:text="@string/photo_name"/>

        <TextView
            android:id="@+id/lst_fotografiaISO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="@string/iso"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>